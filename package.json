{
    "name": "hana-opensap-cloud",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cloudnative/health-connect": "^2.1.0",
        "@dynatrace/oneagent-sdk": "^1.4.0",
        "@sap/cds": "^4",
        "@sap/cds-odata-v2-adapter-proxy": "^1.4.59",
        "@sap/hana-client": "^2.4.177",
        "@sap/hdbext": "^7.0.1",
        "@sap/logging": "^6.0.0",
        "@sap/textbundle": "^3.1.0",
        "@sap/xsenv": "^3.1.0",
        "@sap/xssec": "^3.0.10",
        "accept-language-parser": "^1.5.0",
        "event-loop-lag": "^1.4.0",
        "express": "^4.17.1",
        "express-status-monitor": "^1.3.3",
        "glob": "^7.1.6",
        "helmet": "^4.2.0",
        "node-xlsx": "^0.15.0",
        "opossum-prometheus": "^0.3.0",
        "overload-protection": "^1.2.1",
        "passport": "^0.4.1",
        "password": "^0.1.1",
        "path": "^0.12.7",
        "sap-hdbext-promisfied": "^2.202010.3",
        "swagger-jsdoc": "^6.0.0-rc.3",
        "swagger-ui-express": "^4.1.5",
        "xmldoc": "^1.1.2"
    },
    "devDependencies": {
        "sqlite3": "^5"
    },
    "scripts": {
        "start": "cds run",
        "env": "cp ./default-env.json ./db/default-env.json && cp ./default-env.json ./srv/default-env.json",
        "build": "cds build/all --clean"
    },
    "cds": {
        "cov2ap": {
            "targetPath": "odata/v4",
            "path": "odata/v2",
            "disableNetworkLog": false
        },
        "build": {
            "target": ".",
            "tasks": [
                {
                    "for": "hana",
                    "src": "db",
                    "options": {
                        "model": [
                            "db",
                            "srv",
                            "app"
                        ]
                    }
                },
                {
                    "for": "hana",
                    "src": "user_db",
                    "options": {
                        "model": [
                            "user_db"
                        ]
                    }
                },
                {
                    "for": "node-cf",
                    "src": "srv",
                    "options": {
                        "model": [
                            "db",
                            "srv",
                            "app"
                        ]
                    }
                }
            ]
        },
        "preview": {
            "ui5": {
                "version": "1.80.2"
            }
        },
        "features": {
            "snapi": true
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "db": {
                "kind": "hana"
            }
        }
    }
}